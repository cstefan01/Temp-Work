       Scanner sc3 = new Scanner(System.in);
       System.out.println("<New Fish Price>:");
       String fishPrice = sc3.nextLine();
       Double fishPrice_Double = Double.parseDouble(fishPrice);
       
       
       
       
       Fish newFishes[] = new Fish[fishesArray.length + 1];
       
       for (int i = 0; i < fishesArray.length; i++) {
              newFishes[i] = fishesArray[i];
            }
       
       newFishes[newFishes.length - 1] = new Fish(fishID_integer,fishName,fishPrice_Double);
       System.out.println("");
