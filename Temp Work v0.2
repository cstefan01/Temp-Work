      public static void searchData(Fish [] fishesArray)
    {
       boolean fish_found = false;
       
       
       System.out.println("\n");
       System.out.println("What would you like to search by?" + "\n");
       System.out.println("=========================" + "\n");
       System.out.println("<Press 1 for Search by Fish ID> " + "\n");
       System.out.println("<Press 2 for Search by Fish Name>" + "\n");
       System.out.println("<Press 3 for Search by Fish Price> " + "\n");
       System.out.println("=========================" + "\n");
       
        Scanner sc_option = new Scanner(System.in);  
        System.out.println("<Option Number>:");
        int Option = sc_option.nextInt();
        
        if (Option == 1){
             
             Scanner fishID_scanner = new Scanner(System.in);  
             System.out.println("<Fish ID>:");
             int fishID = fishID_scanner.nextInt();
             
             for (int i = 0; i < fishesArray.length; i++) {
                if (fishesArray[i].id == fishID){
                     Fish.printData(fishesArray,i);
                     fish_found = true;
                }
                    
                }
                
                if (fish_found == false){
                    System.out.printf("The fish containing the following id <%s> has not been found", fishID);
                }
             
             
            
            
        }else if (Option == 2){
            Scanner fishName_scanner = new Scanner(System.in);  
            System.out.println("<Fish Name>:");
            String fishName = fishName_scanner.nextLine();
            
            for (int i = 0; i < fishesArray.length; i++) {
                if (fishName.equals(fishesArray[i].name)){
                     Fish.printData(fishesArray,i);
                     fish_found = true;
                }
                    
                }
                
            if (fish_found == false){
                    System.out.printf("The fish containing the following name <%s> has not been found", fishName);
                }
            
            
         
            
        }else if (Option == 3){
            Scanner fishPrice_scanner = new Scanner(System.in);  
            System.out.println("<Fish Price>:");
            Double fishPrice = fishPrice_scanner.nextDouble();
            String fishPrice_string = Double.toString(fishPrice);
            
            for (int i = 0; i < fishesArray.length; i++) {
                if (fishPrice_string.equals(fishesArray[i].price)){
                     Fish.printData(fishesArray,i);
                }
                    
                }
            
            
        }else{
            System.out.println("Please choose one option from the following menu");
            Fish.searchData(fishesArray);
        }
        
        
        
        
    }
    
    public static void inputData(Fish [] fishesArray)
    {
       Scanner sc1 = new Scanner(System.in);
