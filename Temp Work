public class ReSitProject{
  
    public static void main(String args[])
    {
      // Declaring an array of fishes
      Fish fishes[] = new Fish[4];
      
      fishes[0] = new Fish(1,"Grass carp",1.50);
      fishes[1] = new Fish(2,"Peruvian anchovet",2.50);
      fishes[2] = new Fish(3,"Silver carp",3.50);
      fishes[3] = new Fish(4,"Common carp",4.50);
      
      
      Boolean repeatMenu = true;
      //Fish.printData(fishes);
      while (repeatMenu==true){
          Fish.menu(fishes);
          Scanner myObj = new Scanner(System.in);  
        
        System.out.println( "<Would you like to come back to the main menu?>:"+ "\n");
        System.out.println("=========================" + "\n");
        System.out.println("<Press 1 for Yes>" + "\n");
        System.out.println("<Press 2 for No>" + "\n");
        System.out.println("=========================" + "\n");
        int Repeat = myObj.nextInt();
        
        if (Repeat == 1){
            repeatMenu=true;
        }else if (Repeat == 2){
            repeatMenu=false;
            System.out.println("Goodbye!");
        }
          
      }
      
     
     
      
    }
    
}
  
/*
(1)
Creating a fish class with the attributes
id,name, and price

*/
class Fish {
  
    public int id;
    public String name;
    public Double price;
  
    /*
    (2)
    Fish class constructor
    */
    Fish(int id, String name, Double price)
    {
        this.id = id;
        this.name = name;
        this.price = price;
    }
    
    
    public static void menu(Fish [] fishesArray)
    {
         // Create a Scanner object
        System.out.println("MENU:" + "\n");
        System.out.println("=========================" + "\n");
        System.out.println("<Press 1 for Input Data> " + "\n");
        System.out.println( "<Press 2 for Search Data>" + "\n"); 
        System.out.println("<Press -1 to Exit>" + "\n");
        System.out.println("=========================" + "\n");
        
        Scanner myObj = new Scanner(System.in);  
        
        System.out.println("<Option Number>:");
        String Option = myObj.nextLine();
        
        if (Option.equalsIgnoreCase("1")){
           System.out.println("finally");
            
        }else if (Option.equalsIgnoreCase("2")){
            Fish.searchData(fishesArray);
            
        }else if (Option.equalsIgnoreCase("-1")){
            System.out.println("Quitting Application - Goodbye! ");
            System.exit(0);
            
        }else{
            System.out.println("Please choose the options from the following menu");
            Fish.menu(fishesArray);
        }
         
     
    }
  
    
    public static void printData(Fish [] fishesArray)
    {
            // accessing each element of array
            
            for(int i=0; i<fishesArray.length; i++){
                System.out.print("Fish ID:" +  fishesArray[i].id + "\n");
                System.out.print("Fish Name:" +  fishesArray[i].name + "\n");
                System.out.print("Fish Price:" +  fishesArray[i].price + "\n");
                System.out.println("");
            }
    }
    
      public static void searchData(Fish [] fishesArray)
    {
       System.out.println("What would you like to search by?" + "\n");
       System.out.println("=========================" + "\n");
       System.out.println("<Press 1 for Search by Fish ID> " + "\n");
       System.out.println("<Press 2 for Search by Fish Name>" + "\n");
       System.out.println("<Press 3 for Search by Fish Price> " + "\n");
       System.out.println("=========================" + "\n");
       
        Scanner myObj = new Scanner(System.in);  
        
        System.out.println("<Option Number>:");
        String Option = myObj.nextLine();
        
         if (Option.equalsIgnoreCase("1")){
             Scanner sc0 = new Scanner(System.in);  
        
             System.out.println("<Fish ID>:");
             String fishID = sc0.nextLine();
             
            
        }else if (Option.equalsIgnoreCase("2")){
             Scanner sc1 = new Scanner(System.in);  
        
             System.out.println("<Fish Name>:");
             String fishName = sc1.nextLine();
             System.out.println("\n");
             
              for(int i=0; i<fishesArray.length; i++){
               if (fishName.equalsIgnoreCase(fishesArray[i].name)){
                   System.out.print("Fish ID:" +  fishesArray[i].id + "\n");
                   System.out.print("Fish Name:" +  fishesArray[i].name + "\n");
                  System.out.print("Fish Price:" +  fishesArray[i].price + "\n");
                   System.out.println("");
                   
                  
                   
               
           }
            
            
        }
             
             
            
        }else if (Option.equalsIgnoreCase("3")){
            Scanner sc2 = new Scanner(System.in);  
        
             System.out.println("<Fish Price>:");
             String fishPrice = sc2.nextLine();
             System.out.println("\n");
           }
        
        
    }
    
    public static void inputData()
    {
        System.out.println("Add Data");
    }
}
